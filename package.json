{
  "name": "crop-tool",
  "version": "1.0.0",
  "description": "粮食保管损耗报告单生成系统",
  "main": "main.js",
  "homepage": "https://github.com/example/crop-tool",
  "author": {
    "name": "开发者",
    "email": "developer@example.com"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.example.crop-tool",
    "productName": "Crop Tool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!web_crop/**/*"
    ],
    "icon": "build/icon.png",
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Graphics",
      "maintainer": "开发者 <developer@example.com>",
      "icon": "build/icon.png"
    }
  }
}
